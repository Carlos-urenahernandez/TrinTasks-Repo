{
  "name": "TrinTasks",
  "description": "Manage Trinity School assignments and calendar events",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "iCal Parser"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon-128.png"
  }
}
